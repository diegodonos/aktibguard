{
  "name": "aktibguard-backend",
  "version": "1.1.0",
  "description": "AktibGuard Cybersecurity Platform - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "nodemon --inspect=0.0.0.0:9229 server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "build": "echo 'No build step required for Node.js'",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "docs": "jsdoc -c jsdoc.config.json",
    "security": "npm audit && node scripts/security-check.js",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "cybersecurity",
    "endpoint-monitoring",
    "threat-detection",
    "sme-security",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "security"
  ],
  "author": {
    "name": "AktibGuard Team",
    "email": "dev@aktibguard.com",
    "url": "https://aktibguard.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diegodonos/aktibguard.git"
  },
  "bugs": {
    "url": "https://github.com/diegodonos/aktibguard/issues",
    "email": "support@aktibguard.com"
  },
  "homepage": "https://github.com/diegodonos/aktibguard#readme",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.5.0",
    "nodemailer": "^6.9.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.4",
    "node-cron": "^3.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "prom-client": "^14.2.0",
    "socket.io": "^4.7.2",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "archiver": "^5.3.1",
    "node-fetch": "^2.6.12",
    "geoip-lite": "^1.4.7",
    "yup": "^1.2.0",
    "rate-limiter-flexible": "^2.4.2",
    "express-slow-down": "^1.6.0",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "connect-redis": "^7.1.0",
    "express-session": "^1.17.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-jest": "^27.2.3",
    "prettier": "^3.0.1",
    "@types/jest": "^29.5.3",
    "jsdoc": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.0",
    "faker": "^5.5.3",
    "nock": "^13.3.2",
    "sinon": "^15.2.0",
    "nyc": "^15.1.0",
    "clinic": "^12.1.0",
    "0x": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!**/scripts/**",
      "!server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 30000,
    "verbose": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "no-undef": "error",
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error",
      "prefer-template": "error",
      "template-curly-spacing": "error",
      "arrow-spacing": "error",
      "security/detect-object-injection": "warn",
      "security/detect-non-literal-regexp": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "logs/"
    ],
    "delay": "2500ms"
  }
}